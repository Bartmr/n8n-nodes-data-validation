{
  "name": "typescript-library",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/types.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "npm run clean && tsc --project tsconfig.release.json && node scripts/bundle-declaration-references.js",
    "build:watch": "tsc --project tsconfig.watch.json --watch",
    "clean": "rimraf lib",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:cov:changed": "npm run test:cov -- --onlyChanged",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:debug:watch": "npm run test:debug -- --watch",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts --max-warnings 0 .",
    "lint:fix": "eslint --ext .ts --max-warnings 0 --fix .",
    "integrity-check": "npm run typecheck && npm run lint",
    "precommit": "lint-staged && npm run integrity-check",
    "update-all-dependencies": "npm-check-updates -u && rimraf package-lock.json node_modules && npm install",
    "prepublishOnly": "npm run test && npm run build",
    "reset-repository": "git clean -Xdf"
  },
  "author": "Bartolomeu Rodrigues",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.1.7",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "npm-check-updates": "^11.8.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "tsconfig": "tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json,ts,tsx,scss,sass,css,md}": "prettier --write"
  }
}
